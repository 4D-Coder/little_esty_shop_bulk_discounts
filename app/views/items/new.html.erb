<h1>Create a New Item Below!</h1>
<%= form_tag merchant_items_path(@merchant), method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %></br></br>
    <%= label_tag :description %>
    <%= text_field_tag :description %></br></br>
    <%= label_tag :unit_price %>
    <%= text_field_tag :unit_price %></br></br>
    <%= submit_tag 'Submit'%>
<% end %>
